async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã /start"""
    user = update.effective_user
    logger.info(f"–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å {user.id} ({user.full_name}) –Ω–∞—á–∞–ª –¥–∏–∞–ª–æ–≥")
    
    try:
        # –ó–∞–≥—Ä—É–∂–∞–µ–º –ø–æ—Å–ª–µ–¥–Ω–∏–π –∫–æ–Ω—Ç–µ–∫—Å—Ç –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        logger.info(f"Loading last context for user {user.id}")
        await bot.context_provider.load_last_context(user.id)
        
        # –ü–æ–ª—É—á–∞–µ–º —Å–ø–∏—Å–æ–∫ –¥–æ—Å—Ç—É–ø–Ω—ã—Ö —Ä–µ–∂–∏–º–æ–≤ –∏ –∏—Ö –æ–ø–∏—Å–∞–Ω–∏—è
        import json
        with open('character_profiles.json', 'r', encoding='utf-8') as f:
            profiles = json.load(f)
        
        # –§–æ—Ä–º–∏—Ä—É–µ–º —Å–ø–∏—Å–æ–∫ —Ä–µ–∂–∏–º–æ–≤
        modes_list = []
        for mode, profile in profiles.items():
            modes_list.append(f"‚Ä¢ {mode} - {profile['name']}")
        modes_str = "\n".join(modes_list)
        
        welcome_message = (
            f'–ó–¥—Ä–∞–≤—Å—Ç–≤—É–π—Ç–µ, {user.first_name}! –Ø {bot.current_profile["name"]}, –≤–∞—à –≤–∏—Ä—Ç—É–∞–ª—å–Ω—ã–π —Å–µ–∫—Ä–µ—Ç–∞—Ä—å. '
            '–ë—É–¥—É —Ä–∞–¥–∞ –ø–æ–º–æ—á—å –≤–∞–º –≤ –æ—Ä–≥–∞–Ω–∏–∑–∞—Ü–∏–∏ –¥–µ–ª, –ø–ª–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–∏ –≤—Ä–µ–º–µ–Ω–∏ –∏ —Ä–µ—à–µ–Ω–∏–∏ '
            '–ø–æ–≤—Å–µ–¥–Ω–µ–≤–Ω—ã—Ö –∑–∞–¥–∞—á.\n\n'
            '–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ /mode –¥–ª—è –≤—ã–±–æ—Ä–∞ –º–æ–µ–≥–æ —Ö–∞—Ä–∞–∫—Ç–µ—Ä–∞:\n'
            f'{modes_str}\n\n'
            '–†–∞—Å—Å–∫–∞–∂–∏—Ç–µ, —á—Ç–æ –≤–∞—Å –±–µ—Å–ø–æ–∫–æ–∏—Ç?'
        )
        
        await update.message.reply_text(welcome_message)
        
    except Exception as e:
        logger.error(f"Error in start command: {e}", exc_info=True)
        await update.message.reply_text(
            f'–ó–¥—Ä–∞–≤—Å—Ç–≤—É–π—Ç–µ, {user.first_name}! –Ø –≤–∞—à –≤–∏—Ä—Ç—É–∞–ª—å–Ω—ã–π —Å–µ–∫—Ä–µ—Ç–∞—Ä—å. '
            '–ö —Å–æ–∂–∞–ª–µ–Ω–∏—é, –ø—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ –ø—Ä–æ—Ñ–∏–ª–µ–π. '
            '–ù–æ –≤—ã –≤—Å—ë —Ä–∞–≤–Ω–æ –º–æ–∂–µ—Ç–µ –Ω–∞—á–∞—Ç—å –¥–∏–∞–ª–æ–≥ —Å–æ –º–Ω–æ–π.'
        )

